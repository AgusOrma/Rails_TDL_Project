<div class="container">
<h2 class="text-left">Editar Usuario</h2>

  <%= form_with(model: @usuario, url: usuario_path(@usuario), class: 'form-container', method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :nombre, class: 'form-label' %>
      <%= form.text_field :nombre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :email, class: 'form-label' %>
      <p class="form-control-plaintext"><%= @usuario.email %></p>
    </div>
    <div class="form-group">
    <%= form.label :contraseña, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
    <%= form.label :'Confirmación de Contraseña', class: 'form-label' %>
    <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-actions">
      <%= form.submit "Actualizar", class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', perfil_path(cookies.signed[:usuario_id]), class: 'btn btn-secondary' %>
      <%= button_to 'Eliminar Usuario', delete_self_usuario_path(@usuario), method: :delete, data: { confirm: '¿Estás seguro de eliminar tu cuenta en Fairshare?' }, class: 'btn btn-danger' %>      
    </div>
  <% end %>
</div>

