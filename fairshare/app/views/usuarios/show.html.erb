<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Mis Datos</h2>
          <p><strong>Email:</strong> <%= @usuario.email %></p>
          <p><strong>Nombre:</strong> <%= @usuario.nombre %></p>
          
          <div class="form-actions">
            <%= link_to 'Configurar', edit_usuario_path(@usuario), class: 'btn btn-primary' %>
            <%= link_to 'Volver', index_home_path, class: 'btn btn-dark' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

 <%= render 'layouts/messages' %>