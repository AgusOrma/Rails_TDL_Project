<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Nuevo Grupo</h1>

          <%= form_with(model: @grupo, url: grupos_path, class: 'grupo-form') do |form| %>
            <div class="form-group">
              <%= form.label :nombre %>
              <%= form.text_field :nombre, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :descripcion %>
              <%= form.text_field :descripcion, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= form.label :id_usuarios, "Agregar contactos" %>
              <%= form.collection_select :id_usuarios, @usuarios, :id, :nombre, { prompt: '-' }, { multiple: true, class: 'form-control' } %>
            </div>


            <div class="form-actions">
              <%= form.submit 'Crear Grupo', class: 'btn btn-primary' %>
              <%= link_to 'Cancelar', root_path, class: 'btn btn-warning' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



