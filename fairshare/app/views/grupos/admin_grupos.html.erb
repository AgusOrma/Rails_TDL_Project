<div class="container">
  <h1 class="text-center">Administrar Grupos</h1>

  <div class="table-responsive">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th class="text-left">Nombre</th>
          <th class="text-center">Descripción</th>
          <th class="text-right"></th> <!-- Espacio para los botones -->
        </tr>
      </thead>
      <tbody>
        <% @grupos.each do |grupo| %>
          <tr>
            <td class="text-left"><span class="bullet-point">&#8226;</span> <%= grupo.nombre %></td>
            <td class="text-center"><%= grupo.descripcion %></td>
            <td class="text-right">
            <%= link_to 'Editar', edit_grupo_path(grupo), class: 'btn btn-primary btn-sm me-2' %>
            <%= link_to 'Ver grupo', grupo_path(grupo), class: 'btn btn-info btn-sm me-2' %>
            <%= form_with(model: grupo, url: borrar_grupo_path(grupo), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar este grupo?' }, class: 'd-inline') do |form| %>
              <%= form.button 'Eliminar', class: 'btn btn-danger btn-sm', type: 'submit' %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <%= link_to 'Volver', index_home_path, class: 'btn btn-dark' %>
  </div>
</div>

