<h1 class="text-center">Administrar Grupos</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @grupos.each do |grupo| %>
        <tr>
          <td><%= grupo.nombre %></td>
          <td><%= grupo.descripcion %></td>
          <td>
            <div class="d-flex">
              <%= link_to 'Editar', edit_grupo_path(grupo), class: 'btn btn-primary btn-sm me-2' %>
              <%= link_to 'Ver grupo', grupo_path(grupo), class: 'btn btn-info btn-sm me-2' %>
              <%= form_with(model: grupo, url: borrar_grupo_path(grupo), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar este grupo?' }) do |form| %>
                <%= form.button 'Eliminar', class: 'btn btn-danger btn-sm', type: 'submit' %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


