<div class="container">
  <h1 class="page-title">Editar Grupo</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with(model: @grupo, url: grupo_path(@grupo), method: :patch, class: 'grupo-form') do |form| %>
    <div class="form-group">
      <%= form.label :nombre, class: 'form-label' %>
      <%= form.text_field :nombre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :descripciÃ³n, class: 'form-label' %>
      <%= form.text_field :descripcion, class: 'form-control' %>
    </div>

    <% if current_user.admin? %>
      <div class="form-group">
        <%= form.label :id_usuario_creador, "Creador del Grupo", class: 'form-label' %>
        <%= form.collection_select :id_usuario_creador, @grupo.usuarios, :id, :nombre, { include_blank: true }, class: 'form-control' %>
      </div>
    <% else %>
      <%= form.hidden_field :id_usuario_creador, value: @grupo.id_usuario_creador %>
    <% end %>

    <div class="field">
      <%= form.label :id_usuarios, "Integrantes", class: 'form-label' %>
      <% @usuarios.each do |usuario| %>
        <% unless usuario.admin? %>
          <div class="form-check">
            <%= check_box_tag 'grupo[id_usuarios][]', usuario.id, @usuarios_grupo.include?(usuario), id: "usuario_#{usuario.id}", class: 'form-check-input' %>
            <%= form.label "usuario_#{usuario.id}", usuario.nombre, class: 'form-check-label' %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= form.submit "Guardar cambios", class: 'btn btn-primary' %>
      <% if current_user.admin? %>
        <%= link_to "Cancelar", admin_grupos_grupos_path, class: 'btn btn-dark' %>
      <% else %>
        <%= link_to "Cancelar", grupos_path, class: 'btn btn-dark' %>
      <% end %>
    </div>
  <% end %>
</div>



