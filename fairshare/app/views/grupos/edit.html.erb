<div class="container">
  <h1 class="page-title">Editar Grupo</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with(model: @grupo, url: grupo_path(@grupo), method: :patch, class: 'grupo-form') do |form| %>
    <div class="form-group">
      <%= form.label :nombre, class: 'form-label' %>
      <%= form.text_field :nombre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :descripciÃ³n, class: 'form-label' %>
      <%= form.text_field :descripcion, class: 'form-control' %>
    </div>

      <% if current_user.admin? %>
        <div class="form-group">
          <%= form.label :usuarios, "Usuarios del Grupo", class: 'form-label' %>
          <%= form.collection_select :usuario_ids, Usuario.all, :id, :nombre, { include_blank: true }, { multiple: true, class: 'form-control' } %>
        </div>
      <% else %>
        <p>Usuarios del Grupo:</p>
        <% @grupo.usuarios.each do |usuario| %>
          <p><%= usuario.nombre %></p>
        <% end %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= form.submit "Guardar cambios", class: 'btn btn-primary' %>
      <% if current_user.admin? %>
        <%= link_to "Cancelar", admin_grupos_grupos_path, class: 'btn btn-dark' %>
      <% else %>
        <%= link_to "Cancelar", grupos_path, class: 'btn btn-dark' %>
      <% end %>
    </div>
  <% end %>
</div>



