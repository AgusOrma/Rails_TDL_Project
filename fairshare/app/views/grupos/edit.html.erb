<div class="container">
  <h1 class="page-title">Editar Grupo</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with(model: @grupo, url: grupo_path(@grupo), method: :patch, class: 'grupo-form') do |form| %>
    <div class="form-group">
      <%= form.label :nombre, class: 'form-label' %>
      <%= form.text_field :nombre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :descripciÃ³n, class: 'form-label' %>
      <%= form.text_field :descripcion, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :id_usuarios, "Integrantes", class: 'form-label' %>
      <select name="grupo[id_usuarios][]" multiple class="form-control", size="10">
        <% @usuarios.each do |usuario| %>
          <option value="<%= usuario.id %>" <%= 'selected' if @usuarios_grupo.include?(usuario) %>><%= usuario.nombre %></option>
        <% end %>
      </select>
    </div>

    <div class="form-actions">
      <%= form.submit "Guardar cambios", class: 'btn btn-ok' %>
      <%= link_to "Cancelar", grupos_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>


