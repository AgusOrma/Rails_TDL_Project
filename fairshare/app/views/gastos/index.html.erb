<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center">Mis Gastos</h1>

      <% @gastos.each do |gasto| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Monto: $<%= gasto.monto %></h5>
            <p class="card-text">
              <strong>Descripci√≥n:</strong> <%= gasto.descripcion %><br>
              <strong>Fecha:</strong> <%= gasto.fecha %>
            </p>
          </div>
        </div>
      <% end %>

      <% if @gastos.empty? %>
        <p class="text-center">No tienes gastos registrados.</p>
      <% end %>

      <div class="text-center">
        <%= link_to 'Volver', usuario_path(@usuario), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

