<style>
  .center {
    text-align: center;
  }

  .container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .form-container {
    display: flex;
    justify-content: center;
  }

  .form-container form {
    margin-top: 20px;
    width: 300px;
  }

  .form-container label {
    display: block;
    margin-bottom: 5px;
  }

  .form-container input[type="email"],
  .form-container input[type="password"] {
    width: 100%;
    padding: 5px;
    margin-bottom: 10px;
  }

</style>

<% if flash[:notice] %>
<div class="alert alert-success text-center"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
<div class="alert alert-danger text-center"><%= flash[:alert] %></div>
<% end %>

<div class="center">
